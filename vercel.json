{
    "version": 2,
    "builds": [
        {
            "src": "spotifywrapped/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "Python3.9"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        },
        {
            "src": "manage.py",
            "use": "@vercel/python",
            "config": {
                "includeFiles": ["locale/**"]
      }

        }
        
        
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "spotifywrapped/wsgi.py"
        }
    ],
    "scripts": {
    "build": "python manage.py migrate && python manage.py collectstatic --noinput && python manage.py compilemessages"
  }
    
    

}